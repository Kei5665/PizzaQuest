<div class="col-sm-12 col-lg-4 mb-3">
  <div class="card">
    <div class="card-body">
    <h4 class="card-title">
        <%= monster.name%>
    </h4>
    <ul class="list-inline">
        <li class="list-inline-item">ID:<%= monster.id%></li>
        <li class="list-inline-item">レベル:<%= monster.level%></li>
    </ul>
    <p class="card-text"><%= monster.detail%></p>
    <h5>素材一覧</h5>
    <ul>
    <% monster.recipes.each do |recipe|%>
        <li><%= recipe.name%></li>
    <%end%>
    </ul>
    </div>
  </div>
</div>