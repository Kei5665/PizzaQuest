<div class="nes-table-responsive">
  <table class="nes-table is-bordered mx-auto">
    <thead>
      <tr>
        <th>
          <p class="m-0">ユーザー</p>
        </th>
        <th>
          <p class="m-0"><%= @monster.name%></p>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <div>
            <p class="m-0">HP:</p>
          </div>
          <div class="container">
            <progress class="nes-progress is-success" id="life_user" value="100" max="100"></progress>
          </div>
        </td>
        <td>
          <div>
            <p class="m-0">HP:</p>
          </div>
          <div class="container">
            <progress class="nes-progress is-error" id="life_monster" value="100" max="100"></progress>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
